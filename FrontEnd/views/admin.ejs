            <div class="container" style="margin-top: 200px;">
                <div class="row  align-items-center">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addcollection">
                        ADD 
                      </button>
                      
                    
                </div>
               <div class="row align-items-center">
                    <div class="col">
                        <div style="margin-top:50px;">

                        </div>
                        <table class="table">
                            <thead class="thead-dark">
                              <tr>
                                <th class="col-3">Image</th>
                                <th class="col-3">Title</th>
                                <th class="col-4">Description</th>
                                <th class="col-1">option</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <th >1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>@mdo</td>
                              </tr>
                              <% for(var i=0; i < colData.length; i++) { %>
                                <tr>
                                
                                  <td><%= colData[i].colImage %></td>
                                  <td><%= colData[i].colT %></td>
                                  <td><%= colData[i].colDescription %></td>
                                  <td> <button  class="btn btn-danger" id="deleteAccount"> Delete </button></td>
                                </tr>
                             <% } %>
                              
                              
                            </tbody>
                          </table>
                    </div>
               </div>
            </div>
            <!-- modal -->
            <div class="modal fade" id="addcollection" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="staticBackdropLabel">Add Collection</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                              <label for="Title">Title</label>
                              <input type="text" class="form-control" id="colTitle"  placeholder="Title" required>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="Image">Image</label>
                                    <input type="file" class="form-control" id="colImage">
                                  </div>
                                  <div class="form-group">
                              <label for="Description">Description</label>
                              <textarea  class="form-control" id="colDescription" placeholder="Description"></textarea>
                            </div>
                          </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button  id="createCollection" class="btn btn-primary">Submit</button>
                      
                    </div>
                  </div>
                </div>
              </div>
              
            


    
